<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" app:layout_anchorGravity="bottom|center"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" tools:showIn="@layout/activity_main_recycleview">

    <Button
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            app:layout_anchor="@id/app_bar"
            android:text="Submit"
            android:textColor="@android:color/white"
            android:background="@drawable/black_border_color"
            app:srcCompat="@android:drawable/ic_dialog_email"/>

</LinearLayout>

